@page "/shoppingcart"
@using Portal264.Blazor.Client.ViewModels;
@using Portal264.Blazor.Shared;
@using System.Globalization;
@inject IShoppingCartViewModel ViewModel

<h1>Shopping Cart</h1>

<table class="table table-bordered">
    <thead class="thead-light">
        <tr>
            <th>Item</th>
            <th>Quantity</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewModel.Cart)
        {
        <tr>
            <td>@item.Name</td>
            <td>@item.Quantity</td>
            <td>@ViewModel.DisplayPrice(@item.Price)</td>
        </tr>
        }
    </tbody>
    <tfoot class="thead-light">
        <tr>
            <th>@ViewModel.DisplayTotal().Name</th>
            <th>@ViewModel.DisplayTotal().Quantity</th>
            <th>@ViewModel.DisplayPrice(@ViewModel.DisplayTotal().Price)</th>
        </tr>
    </tfoot>
</table>

@functions {
    protected override void OnInit()
    {
        ViewModel.AddItemToCart("Intel Core i9-7980XE Skylake X 18", 1, 2049.99m);
        ViewModel.AddItemToCart("ASUS ROG Strix X99-E", 1, 299.99m);
        ViewModel.AddItemToCart("EVGA GeForce RTX 2080 Ti", 1, 1069.99m);
    }
}