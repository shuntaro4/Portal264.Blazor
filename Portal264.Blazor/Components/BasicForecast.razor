@using Portal264.Blazor.ViewModels

<table class="table table-hover">
    <thead>
        <tr>
            <th>Date</th>
            <th>Temp. (@ViewModel.DisplayTemperatureScaleShort)</th>
            <th>Summary</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var forecast in ViewModel.WeatherForecasts)
        {
            <tr onclick="@(async () => await ViewModel.ToggleForecast(forecast.Date))">
                <td>@forecast.Date.ToShortDateString()</td>
                <td>@ViewModel.DisplayTemperature(@forecast.TemperatureC)</td>
                <td>@forecast.Summary</td>
            </tr>
        }
    </tbody>
</table>

@functions {
    [Parameter]
    private IBasicForecastViewModel ViewModel { get; set; }
}