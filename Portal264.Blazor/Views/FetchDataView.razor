@page "/fetchdatamvvm"
@using  Portal264.Blazor.ViewModels
@inject IFetchDataViewModel fetchDataViewModel

<h1>Weather forecast</h1>
<p>This component demonstrates fetching data from the server.</p>

@if (fetchDataViewModel.WeatherForecasts == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <button class="btn btn-primary" onclick=@fetchDataViewModel.ToggleTemperatureScale>
        Display @fetchDataViewModel.DisplayOtherTemperatureScaleLong
    </button>

    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Temp. (@fetchDataViewModel.DisplayTemperatureScaleShort)</th>
                <th>Summary</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var forecast in fetchDataViewModel.WeatherForecasts)
            {
                <tr>
                    <td>@forecast.Date.ToShortDateString()</td>
                    <td>@fetchDataViewModel.DisplayTemperature(@forecast.TemperatureC)</td>
                    <td>@forecast.Summary</td>
                </tr>
            }
        </tbody>
    </table>
}

@functions {
    protected override async Task OnInitAsync()
    {
        await fetchDataViewModel.RetrieveForecastsAsync();
    }
}